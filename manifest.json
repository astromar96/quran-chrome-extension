{
  "manifest_version": 3,
  "name": "Quran Audio Player",
  "version": "1.0.0",
  "description": "Listen to Quran recitations with beautiful audio controls",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://mp3quran.net/*",
    "https://www.mp3quran.net/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

